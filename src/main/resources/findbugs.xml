<FindbugsPlugin
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="findbugsplugin.xsd" 
        pluginid="com.joebowbeer.findbugs.android"
        provider="Joe Bowbeer"
        website="http://linkedin.com/in/joebowbeer">

    <Detector
        class="com.joebowbeer.findbugs.detect.AndroidHandlerIdiom"
        speed="fast"
        reports="ANDROID_HANDLER_IDIOM" />

    <BugPattern
        type="ANDROID_HANDLER_IDIOM"
        abbrev="AHI"
        category="PERFORMANCE"/>

</FindbugsPlugin>
